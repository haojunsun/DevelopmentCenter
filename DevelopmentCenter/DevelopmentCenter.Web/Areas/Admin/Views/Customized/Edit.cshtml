@model Tycoon.Web.Models.CustomizedViewModel
@{
    ViewBag.Title = "定制旅游编辑";
    ViewBag.SubTitle = "管理站点定制旅游编辑";
}
<div class="row" ng-controller="PackageController">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">@ViewBag.Title</span>
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("Edit", "Customized", FormMethod.Post, new { @class = "form-horizontal", @role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(model => model.id)
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-1">游客</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3"> @(Model.name)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">状态</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3"> @(Model.Sort)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">提出时间</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3"> @(Model.Date_tc)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">处理时间</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3"> @(Model.Date_cl)</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">定制目的地要求</label>
                            <div class="col-md-10">
                                <label class="control-label col-md-3"> @(Model.Yq_mdd)</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">定制时间要求</label>
                            <div class="col-md-10">
                                <label class="control-label col-md-3"> @(Model.Yq_sj)</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">定制预期费用</label>
                            <div class="col-md-10">
                                <label class="control-label col-md-3"> @(Model.Yq_fy)</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">定制其他要求</label>
                            <div class="col-md-10">
                                <label class="control-label col-md-3"> @(Model.Yq_qt)</label>
                            </div>
                        </div>
                        <div class="form-group">
                          
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Text_cl, new {@name = "Text_cl", @placeholder = "处理备注", @class = "form-control", @rows = "5"})
                            </div>
                        </div>


                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">保 存</button>
                                    <a href="@Url.Action("List")" class="btn default">取消，返回列表</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        function GetSeries(id) {
            $("#series").empty();
            $("#carmodel").empty(); //清空SELECT控件
            var seriesid = $("#brand").val();
            if (seriesid == 0) {
                $("#series").html("<option value='0' >所有车系</option>");
                $("#carmodel").html("<option value='0' >所有车款</option>"); //清空SELECT控件
            } else if (window.JSON) {
                $.ajax({
                    url: "@Url.Action("GetSeries", "Car")",
                    type: "Get",
                    data: { id: seriesid },
                    datatype: "json",
                    contentType: "application/json",
                    success: function(data) {
                        $("#series").html(data);
                        $("#carmodel").html("<option value='0' >所有车款</option>"); //清空SELECT控件
                    }
                });
            } else {
                alert('JSON browser support required for this page.');
            }
        }

        function CarModel(id) {
            $("#carmodel").empty(); //清空SELECT控件
            var seriesid = $("#series").val();
            if (seriesid == 0) {
                $("#carmodel").html("<option value='0' >所有车款</option>");
            }
            else if (window.JSON) {
                $.ajax({
                    url: "@Url.Action("GetCarModel", "Car")",
                    type: "Get",
                    data: { id: seriesid },
                    datatype: "json",
                    contentType: "application/json",
                    success: function(data) {
                        $("#carmodel").html(data);
                    }
                });
            } else {
                alert('JSON browser support required for this page.');
            }
        }
    </script>
}