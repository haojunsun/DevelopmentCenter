@using PagedList;
@using PagedList.Mvc

@model PagedList.StaticPagedList<Tycoon.Web.Models.UserViewModel>
@{
    ViewBag.Title = "会员列表";
    ViewBag.SubTitle = "管理站点会员内容";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">@ViewBag.Title</span>
                </div>
                <div class="pull-right">
                    @*<div class="btn-group">
                            <button type="button" class="btn btn-sm default dropdown-toggle" data-toggle="dropdown">
                                导出全部Excel
                                <i class="fa fa-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="@Url.Action("Export")" id="btnxls">
                                        导出全部Excel
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Export", new
                                         {
                                             @key = ViewBag.Search,
                                         })" id="btnxlssearch">
                                        按搜索结果导出Excel
                                    </a>
                                </li>
                            </ul>
                        </div>*@
                    <div class="btn-group">
                        <a class="btn btn-sm green" href="@Url.Action("Create")">
                            添加大亨 <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="navbar navbar-default" role="navigation">
                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                            @using (Html.BeginForm("List", "User", FormMethod.Get, new { @class = "navbar-form" }))
                            {
                                <div class="input-group input" style="width: 100%;">
                                    <input type="text" value="@ViewBag.Search" id="key" name="key" placeholder="搜索姓名、手机号" class="form-control">
                                    <span class="input-group-btn" style="width: 1%;">
                                        <button type="submit" class="btn green">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="table-scrollable table-scrollable-borderless">

                    <table class="table table-hover table-light">
                        <thead>
                            <tr>
                                <th>姓名</th>
                                <th>状态</th>
                                <th>类别</th>
                                <th>电话</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model.Where(item => item != null))
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Edit", new { id = item.Id })">@item.Name</a>
                                        </td>
                                        <td>@item.State</td>
                                        <td>@item.Category</td>
                                        <td>@item.tel</td>
                                        <td>
                                            <a href="@Url.Action("Delete", new { id = item.Id })" onclick=" return confirm('确认删除吗？'); " class="btn default btn-xs red">
                                                <i class="fa fa-trash-o"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-5 col-sm-12">
                        共@(Model.TotalItemCount)条,每页@(Model.PageSize)条,当前@(Model.PageNumber)/@(Model.PageCount)页
                    </div>
                    <div class="col-md-7 col-sm-12 text-right">
                        @Html.PagedListPager((IPagedList)Model, page => Url.Action("List", new
                        {
                            page = page,
                            @size = ViewBag.Size,
                            @key = ViewBag.Search,
                        }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
