@model Tycoon.Web.Models.YjfxViewModel
<div class="row" ng-controller="ArticleController">
    <div class="col-md-12">

        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">游记分享详情 - @Model.Title</span>
                </div>
                <div class="actions">
                    <a class="btn btn-sm green" href="@Url.Action("List")">>返回游记分享列表</a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-1">发布人</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3"> @(Model.name)</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-1">是否有效</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3">@(Model.Sort)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">关键词1</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3">@(Model.Key1)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">关键词2</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3">@(Model.Key2)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">关键词3</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3">@(Model.Key3)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">关键词4</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3">@(Model.Key4)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">关键词5</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3">@(Model.Key5)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">关键词6</label>
                            <div class="col-md-11">
                                <label class="control-label col-md-3">@(Model.Key6)</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>